<p id="notice"><%= notice %></p>

<h1>Procucts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Vendor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @procucts.each do |procuct| %>
      <tr>
        <td><%= procuct.name %></td>
        <td><%= procuct.price %></td>
        <td><%= procuct.vendor %></td>
        <td><%= link_to 'Show', procuct %></td>
        <td><%= link_to 'Edit', edit_procuct_path(procuct) %></td>
        <td><%= link_to 'Destroy', procuct, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

